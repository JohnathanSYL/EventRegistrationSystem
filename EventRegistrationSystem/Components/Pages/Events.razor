@page "/events"

<h1 class="text-center mt-4">Upcoming Events</h1>

<p class="text-center">Browse through the exciting events we have scheduled!</p>

<div class="container mt-5">
    <div class="row">
        @foreach (var eventItem in events)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow">
                    <img src="@eventItem.Thumbnail" class="card-img-top" alt="@eventItem.Name" />
                    <div class="card-body">
                        <h5 class="card-title">@eventItem.Name</h5>
                        <p class="card-text">@eventItem.Description</p>
                        <p class="card-text"><strong>Date:</strong> @eventItem.Date.ToString("MMMM dd, yyyy")</p>
                        <a href="@eventItem.Link" class="btn btn-primary w-100" target="_blank">Explore Event</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

